<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".landingPage"
    tools:layout_editor_absoluteX="0dp"
    tools:layout_editor_absoluteY="151dp">

    <ImageView
        android:id="@+id/imageView14"
        android:layout_width="80dp"
        android:layout_height="0dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="21dp"
        android:layout_marginBottom="21dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView4"
        app:layout_constraintStart_toEndOf="@+id/imageView4"
        app:layout_constraintTop_toTopOf="@+id/imageView4"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/schoolicon" />

    <ImageView
        android:id="@+id/imageView13"
        android:layout_width="0dp"
        android:layout_height="75dp"
        android:layout_marginStart="85dp"
        android:layout_marginTop="76dp"
        android:layout_marginEnd="23dp"
        app:layout_constraintEnd_toStartOf="@+id/imageView4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/namelogo" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="0dp"
        android:layout_height="123dp"
        android:layout_marginTop="46dp"
        android:layout_marginEnd="179dp"
        android:layout_marginBottom="38dp"
        app:layout_constraintBottom_toTopOf="@+id/testBar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.113"
        app:layout_constraintStart_toEndOf="@+id/imageView13"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/pole" />

    <ProgressBar
        android:id="@+id/testBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="0dp"
        android:layout_height="90dp"
        android:layout_marginEnd="103dp"
        android:background="#D3E6A5"
        android:indeterminateDrawable="@drawable/proggreen_bg"
        app:layout_constraintBottom_toTopOf="@+id/textView5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.182"
        app:layout_constraintStart_toEndOf="@+id/textView3"
        app:layout_constraintTop_toTopOf="@+id/textView5"
        app:layout_constraintVertical_bias="0.155" />

    <AnalogClock
        android:id="@+id/simpleAnalogClock"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:background="#D3D0D0"
        android:padding="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.688"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/testBar" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="12dp"
        android:text="Time"
        android:textColor="#000000"
        android:textSize="8sp"
        app:layout_constraintBottom_toBottomOf="@+id/simpleAnalogClock"
        app:layout_constraintEnd_toEndOf="@+id/simpleAnalogClock" />

    <ProgressBar
        android:id="@+id/taskBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="0dp"
        android:layout_height="90dp"
        android:layout_marginStart="105dp"
        android:layout_marginTop="120dp"
        android:layout_marginEnd="51dp"
        android:background="#A5A6F6"
        android:indeterminateDrawable="@drawable/progpurple_bg"
        app:layout_constraintEnd_toStartOf="@+id/textView5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView14" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="59dp"
        android:layout_marginBottom="8dp"
        android:text="Task"
        android:textSize="8sp"
        app:layout_constraintBottom_toBottomOf="@+id/tvcounter"
        app:layout_constraintEnd_toStartOf="@+id/testBar"
        app:layout_constraintStart_toEndOf="@+id/taskBar" />

    <TextView
        android:id="@+id/tvcounter"
        android:layout_width="39dp"
        android:layout_height="37dp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="108dp"
        tools:layout_editor_absoluteY="169dp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="1dp"
        android:layout_marginEnd="1dp"
        android:fontFamily="@font/poppins_bold"
        android:text="2/4"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="@+id/tvcounter"
        app:layout_constraintEnd_toEndOf="@+id/taskbtn"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/imageView14"
        app:layout_constraintTop_toTopOf="@+id/tvcounter"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="0dp"
        android:layout_height="12dp"
        android:layout_marginEnd="127dp"
        android:text="Final/Test"
        android:textSize="8sp"
        app:layout_constraintBottom_toBottomOf="@+id/textView4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/taskBar"
        app:layout_constraintTop_toTopOf="@+id/textView4"
        app:layout_constraintVertical_bias="1.0" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/taskbtn"
        android:layout_width="160dp"
        android:layout_height="50dp"
        android:layout_marginTop="52dp"
        android:background="@drawable/round_btn1"
        android:fontFamily="@font/poppins_bold"
        android:text="Task"
        android:textColor="#FFFFFF"
        android:viewportWidth="65"
        android:viewportHeight="38"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/simpleAnalogClock" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/upcomingpaperbtn"
        android:layout_width="160dp"
        android:layout_height="50dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/round_btn2"
        android:fontFamily="@font/poppins_bold"
        android:text="Upcoming Paper"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/taskbtn" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/timetablebtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="23dp"
        android:background="@drawable/round_btn4"
        android:fontFamily="@font/poppins_bold"
        android:text="Timetable"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toStartOf="@+id/myprofilebtn"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/upcomingpaperbtn" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/myprofilebtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:background="@drawable/round_btn5"
        android:fontFamily="@font/poppins_bold"
        android:text="My Profile"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/timetablebtn"
        app:layout_constraintTop_toBottomOf="@+id/upcomingpaperbtn" />

</androidx.constraintlayout.widget.ConstraintLayout>