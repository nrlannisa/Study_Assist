<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/registerbg"
    tools:context=".user_sign.RegisterPage">

    <EditText
        android:id="@+id/input_reg_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/fillbox"
        android:ems="10"
        android:inputType="textEmailAddress"
        android:text="Email...."
        android:textAlignment="center"
        android:textColor="#4A4DFF"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <EditText
        android:id="@+id/input_reg_pass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/fillbox"
        android:ems="10"
        android:inputType="textPassword"
        android:text="Password"
        android:textAlignment="center"
        android:textColor="#4A4DFF"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/input_reg_email" />

    <EditText
        android:id="@+id/input_reg_fname"
        android:layout_width="109dp"
        android:layout_height="37dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/fillbox"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="First Name"
        android:textAlignment="center"
        android:textColor="#4A4DFF"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@+id/input_reg_pass"
        tools:layout_editor_absoluteX="88dp" />

    <EditText
        android:id="@+id/input_reg_lname"
        android:layout_width="109dp"
        android:layout_height="37dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/fillbox"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Last Name"
        android:textAlignment="center"
        android:textColor="#4A4DFF"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@+id/input_reg_pass"
        tools:layout_editor_absoluteX="216dp" />

    <EditText
        android:id="@+id/input_reg_course"
        android:layout_width="240dp"
        android:layout_height="47dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/fillbox"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Course (CS270)"
        android:textAlignment="center"
        android:textColor="#4A4DFF"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/input_reg_lname" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:fontFamily="@font/poppins_bold"
        android:text="Register"
        android:textColor="#FFFFFF"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView7" />

    <Button
        android:id="@+id/btn_reg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:background="@drawable/button"
        android:backgroundTint="#4A4DFF"
        android:text="Sign Up!"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/input_reg_course" />

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="29dp"
        android:layout_height="28dp"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/schoolicon"
        tools:layout_editor_absoluteX="211dp" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="50dp"
        android:layout_height="26dp"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/namelogo"
        tools:layout_editor_absoluteX="147dp" />

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="14dp"
        android:layout_height="42dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/pole" />

</androidx.constraintlayout.widget.ConstraintLayout>